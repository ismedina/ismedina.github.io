---
layout: none
---

<!DOCTYPE html>
<html lang="{{ site.lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ page.description }}">
    <style>
      body {
        font-family: 'Playfair Display', 'Crimson Text', Georgia, serif;
        background-color: #f8f4e9;  /* Elegant cream color */
        line-height: 1.8;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Playfair Display', Georgia, serif;
        color: #2c1810;  /* Dark brown for headers */
      }
      p {
        color: #333;
        font-size: 1.1rem;
      }
      .content {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        margin: 2rem 0;
        text-align: left;
      }
      input, textarea {
        font-family: 'Crimson Text', Georgia, serif;
        padding: 0.5rem;
        margin: 0.5rem 0;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 100%;
        max-width: 400px;
      }
      button {
        background-color: #2c1810;
        color: #fff;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-family: 'Crimson Text', Georgia, serif;
        margin: 1rem 0;
      }
      button:hover {
        background-color: #4a2b1d;
      }
    </style>
    <!-- Load Playfair Display and Crimson Text fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      {{ content }}
    </div>
  </body>
</html>